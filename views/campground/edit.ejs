<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%=data.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campground/<%=data._id%>?_method_=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="data[name]"  value=" <%=data.name%>" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="data[img]" value=" <%=data.img%>" >
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="data[des]" value=" <%=data.des%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campground">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>